# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/social_media_automation
MONGODB_TEST_URI=mongodb://localhost:27017/social_media_automation_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# WhatsApp Business API Configuration
WHATSAPP_BUSINESS_API_TOKEN=your-whatsapp-business-api-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-whatsapp-business-account-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=test_token
WHATSAPP_API_VERSION=v18.0

# Facebook Graph API Configuration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
FACEBOOK_PAGE_ID=your-facebook-page-id
FACEBOOK_API_VERSION=v18.0

# Instagram Business API Configuration
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-instagram-business-account-id
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# Meta Pixel Configuration
META_PIXEL_ID=your-meta-pixel-id
META_PIXEL_ACCESS_TOKEN=your-meta-pixel-access-token

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Business Sector Configuration
EDUCATION_SECTOR_ID=education_catering
HOSPITALITY_SECTOR_ID=hawana_cafe
INVESTMENT_SECTOR_ID=portfolio_management

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_TIMEOUT=5000

# Testing Configuration
TEST_MODE=false
MOCK_API_RESPONSES=false 